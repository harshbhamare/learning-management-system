<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= course.title %> | Student Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    /* Base */
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: Arial, sans-serif;
      background-color: #121212;
      color: #f1f1f1;
      line-height: 1.6;
    }

    header {
      background: #1f1f1f;
      padding: 16px 24px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #333;
    }

    .header-left {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .header-left img{
      height: 50px;
    }

    header h1 {
      font-size: 22px;
      font-weight: bold;
    }

    .signin-btn {
      background: #2563eb;
      color: white;
      padding: 8px 16px;
      border-radius: 6px;
      font-weight: bold;
      text-decoration: none;
      transition: background 0.3s;
    }

    .signin-btn:hover {
      background: #1d4ed8;
    }

    main {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 24px;
      padding: 24px;
    }

    /* Video Player */
    .video-container {
      background: #2a2a2a;
      border-radius: 8px;
      overflow: hidden;
      position: relative;
      padding-top: 56.25%;
    }

    .video-container iframe {
      position: absolute;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      border: none;
    }

    .video-info {
      margin-top: 20px;
      background: #1f1f1f;
      border-radius: 8px;
      padding: 20px;
    }

    .video-info h2 {
      font-size: 20px;
      margin-bottom: 12px;
    }

    /* Sidebar */
    aside {
      display: flex;
      flex-direction: column;
      gap: 16px;
    }

    .sidebar-box {
      background: #1f1f1f;
      border-radius: 8px;
      padding: 16px;
    }

    .sidebar-box h3 {
      font-size: 18px;
      margin-bottom: 12px;
    }

    .chapter-header {
      background: #2a2a2a;
      padding: 10px 12px;
      border-radius: 6px;
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 8px;
    }

    .chapter-header:hover {
      background: #3a3a3a;
    }

    .videos-list {
      list-style: none;
      margin-top: 8px;
      padding-left: 12px;
      display: none;
    }

    .videos-list li {
      padding: 8px;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.3s;
    }

    .videos-list li:hover {
      background: #333;
    }

    .empty-message {
      color: #aaa;
      font-size: 14px;
      margin: 10px 0;
    }

    @media(max-width: 900px) {
      main { grid-template-columns: 1fr; }
    }
  </style>
</head>
<body>

  <header>
    <!-- Left: Logo + Title -->
    <div class="header-left">
      <img src="/images/logo.png" alt="Hustler.XERO Logo" class="">
      <h1><%= course.title %></h1>
    </div>

    <!-- Right: Sign In -->
    <a href="/signin" class="signin-btn">Sign In</a>
  </header>

  <main>
    <!-- Video Section -->
    <section>
      <% if (course.chapters.length > 0 && course.chapters[0].videos.length > 0) { %>
        <div class="video-container">
          <iframe id="video-player" 
            src="<%= course.chapters[0].videos[0].youtubeLink.replace('watch?v=', 'embed/') %>" 
            allowfullscreen>
          </iframe>
        </div>

        <div class="video-info">
          <h2 id="video-title"><%= course.chapters[0].videos[0].title %></h2>
          <p id="video-description"><%= course.chapters[0].videos[0].description %></p>
        </div>
      <% } else { %>
        <div class="video-info">
          <h2>No lectures available yet</h2>
          <p>Please check back later once the instructor uploads content.</p>
        </div>
      <% } %>
    </section>

    <!-- Sidebar -->
    <aside>
      <div class="sidebar-box">
        <h3>Course Content</h3>
        
        <% if (course.chapters.length > 0) { %>
          <% course.chapters.forEach((chapter, cIndex) => { %>
            <div class="chapter">
              <div class="chapter-header">
                <span>Chapter <%= cIndex+1 %>: <%= chapter.title %></span>
                <span>â–¼</span>
              </div>
              <ul class="videos-list">
                <% if (chapter.videos.length > 0) { %>
                  <% chapter.videos.forEach((video, vIndex) => { %>
                    <li class="video-item"
                        data-title="<%= video.title %>"
                        data-description="<%= video.description %>"
                        data-video-id="<%= video.youtubeLink.split('v=')[1] %>">
                      <%= (cIndex+1) %>.<%= (vIndex+1) %> <%= video.title %>
                    </li>
                  <% }) %>
                <% } else { %>
                  <li class="empty-message">No lectures in this chapter yet.</li>
                <% } %>
              </ul>
            </div>
          <% }) %>
        <% } else { %>
          <p class="empty-message">No chapters added yet.</p>
        <% } %>
      </div>
    </aside>
  </main>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const chapters = document.querySelectorAll(".chapter");
      const videoPlayer = document.getElementById("video-player");
      const videoTitle = document.getElementById("video-title");
      const videoDescription = document.getElementById("video-description");

      chapters.forEach(chapter => {
        const header = chapter.querySelector(".chapter-header");
        const videoList = chapter.querySelector(".videos-list");

        header.addEventListener("click", () => {
          videoList.style.display = videoList.style.display === "block" ? "none" : "block";
        });

        chapter.querySelectorAll(".video-item").forEach(item => {
          item.addEventListener("click", () => {
            const videoId = item.dataset.videoId;
            const title = item.dataset.title;
            const description = item.dataset.description;

            videoPlayer.src = `https://www.youtube.com/embed/${videoId}`;
            videoTitle.textContent = title;
            videoDescription.textContent = description;
          });
        });
      });
    });
  </script>

</body>
</html>
